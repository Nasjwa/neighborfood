<div class="nf-page nf-profile">
  <div class="nf-profile-card">
    <h1 class="nf-profile-edit-title">Edit profile</h1>

    <%= form_with model: @user, url: user_path(@user), method: :patch, local: true do |f| %>

      <div class="nf-form-group">
        <%= f.label :email, "Email" %>
        <%= f.email_field :email, class: "nf-input" %>
      </div>

      <div class="nf-form-group">
        <%= f.label :first_name, "First name" %>
        <%= f.text_field :first_name, class: "nf-input" %>
      </div>

      <div class="nf-form-group">
        <%= f.label :last_name, "Last name" %>
        <%= f.text_field :last_name, class: "nf-input" %>
      </div>

      <div class="nf-form-group">
        <%= f.label :post_code, "Post code" %>
        <%= f.text_field :post_code, class: "nf-input" %>
      </div>

      <div class="nf-form-group">
        <%= f.label :address, "Address" %>
        <%= f.text_area :address, rows: 3, class: "nf-input" %>
      </div>

      <div class="nf-form-actions">
        <%= f.submit "Save changes", class: "nf-button" %>
        <%= link_to "Cancel", user_path(@user, tab: "details"), class: "nf-link-cancel" %>
      </div>
    <% end %>
  </div>
</div>
