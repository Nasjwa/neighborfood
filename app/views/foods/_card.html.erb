<% if local_assigns[:food].present? %>
  <article class="nf-card">
    <template class="claim-template">
      <%= render "claims/claiming_food", food: food %>
    </template>

    <%= link_to food_path(food), class: "nf-card-media" do %>
      <% if food.photos.attached? %>
        <%= image_tag food.photos.first, alt: food.title %>
      <% else %>
        <div class="nf-card-ph"></div>
      <% end %>
    <% end %>

    <div class="nf-card-body">
      <h3 class="nf-card-title">
        <strong><%= link_to food.title, food %></strong>
      </h3>

      <p class="nf-card-desc">
        <%= truncate(food.description.to_s, length: 80) %>
      </p>

      <div  class="nf-card-colect">
        <p>
          Collect on <strong><%= food.start_time.to_date.strftime("%d %b %Y") %></strong><br>
          Between <strong><%= food.start_time.strftime("%H:%M") %></strong>
          and <strong><%= food.end_time.strftime("%H:%M") %></strong>
        </p>
      </div>
      
      <div class="nf-card-footer">
        <div class="nf-card-actions">
          <% unless user_signed_in? %>
            <%= link_to "Claim",
                        new_user_session_path,
                        class: "nf-chip nf-chip--cta" %>
          <% else %>
            <%= link_to "Claim",
                new_food_claim_path(food),
                class: "nf-chip nf-chip--cta",
                data: { claim_modal_url: new_food_claim_path(food) } %>
          <% end %>
        </div>

        <div class="nf-card-tags">
          <% food.tags.each do |tag| %>
            <span class="nf-food-tag"><%= tag.name %></span>
          <% end %>
        </div>
      </div>
    </div>
  </article>

<% else %>
  <!-- Skeleton placeholder -->
  <article class="nf-card is-skeleton" aria-hidden="true">
    <div class="nf-card-media"><div class="nf-skel"></div></div>
    <div class="nf-card-body">
      <div class="nf-skel nf-skel-title"></div>
      <div class="nf-skel nf-skel-line"></div>
      <div class="nf-skel nf-skel-line short"></div>
      <div class="nf-chip nf-chip--ghost" style="width:72px;">&nbsp;</div>
    </div>
  </article>
<% end %>
