<h1>Test</h1>
<p>This is a test page for foods index.</p>

<div class="mb-4">
    <%= link_to "Add a new food", new_food_path, class: "btn btn-primary" %>
</div>

<ul>
  <% @foods.each do |food| %>
    <li>
      <h2><%= link_to food.title, food_path(food) %></h2>
      <p><%= food.description %></p>
      <p>Quantity: <%= food.quantity %></p>
      <p>Location: <%= food.user.post_code %></p>
      <p>Posted by: <%= food.user.name %></p>
    </li>
  <% end %>
</ul>
