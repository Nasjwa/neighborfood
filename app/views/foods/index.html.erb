<div class="nf-home">

  <!-- Location bar -->
  <div class="nf-location">
    <button class="nf-loc-btn" type="button">
      <span class="nf-loc-dot" aria-hidden="true"></span>
      Use my location
    </button>
    <%= link_to("Change", root_path, class: "nf-loc-change") if user_signed_in? %>
  </div>

  <!-- Tag chips -->
  <div class="nf-chip-row">
    <% selected = Array(params[:tags]) %>

    <% @tags.each do |tag| %>
      <% active = selected.include?(tag.name) %>

      <%= link_to tag.name,
        foods_path(tags: active ? selected - [tag.name] : selected + [tag.name]),
        class: "nf-chip #{active ? 'nf-chip--cta' : ''}" %>
    <% end %>

    <% if selected.any? %>
      <%= link_to "Clear filters", foods_path, class: "nf-chip nf-chip--cta" %>
    <% end %>
  </div>

  

  <!-- Section: Near you -->
  <section class="nf-section nf-row" data-controller="carousel">
    <div class="nf-row__head">
      <h2 class="nf-row__title">Near you</h2>
      <div class="nf-arrows">
        <button type="button" class="nf-arrow" data-action="carousel#prev" aria-label="Scroll left">‚Äπ</button>
        <button type="button" class="nf-arrow" data-action="carousel#next" aria-label="Scroll right">‚Ä∫</button>
        <%= link_to "See all", foods_path, class: "nf-row__seeall" %>
      </div>
    </div>

    <div class="nf-scroller" data-carousel-target="track" role="region" aria-label="Near you">
      <% if defined?(@nearby) && @nearby.present? %>
        <% @nearby.each do |food| %>
          <div class="nf-snap"><%= render "foods/card", food: food %></div>
        <% end %>
      <% else %>
        <% 6.times do %>
          <div class="nf-snap"><%= render "foods/card", food: nil %></div>
        <% end %>
      <% end %>
    </div>
  </section>

  <!-- Section: Cooked meals -->
  <section class="nf-section nf-row" data-controller="carousel">
    <div class="nf-row__head">
      <h2 class="nf-row__title">Cooked meals</h2>
      <div class="nf-arrows">
        <button type="button" class="nf-arrow" data-action="carousel#prev" aria-label="Scroll left">‚Äπ</button>
        <button type="button" class="nf-arrow" data-action="carousel#next" aria-label="Scroll right">‚Ä∫</button>
        <%= link_to "See all", foods_path, class: "nf-row__seeall" %>
      </div>
    </div>

    <div class="nf-scroller" data-carousel-target="track" role="region" aria-label="Cooked meals">
      <% if defined?(@cooked) && @cooked.present? %>
        <% @cooked.limit(4).each do |food| %>
          <div class="nf-snap"><%= render "foods/card", food: food %></div>
        <% end %>
      <% else %>
        <% 4.times do %>
          <div class="nf-snap"><%= render "foods/card", food: nil %></div>
        <% end %>
      <% end %>
    </div>
  </section>

  <!-- Section: Groceries -->
  <section class="nf-section nf-row" data-controller="carousel">
    <div class="nf-row__head">
      <h2 class="nf-row__title">Groceries</h2>
      <div class="nf-arrows">
        <button type="button" class="nf-arrow" data-action="carousel#prev" aria-label="Scroll left">‚Äπ</button>
        <button type="button" class="nf-arrow" data-action="carousel#next" aria-label="Scroll right">‚Ä∫</button>
        <%= link_to "See all", foods_path, class: "nf-row__seeall" %>
      </div>
    </div>

    <div class="nf-scroller" data-carousel-target="track" role="region" aria-label="Groceries">
      <% if defined?(@groceries) && @groceries.present? %>
        <% @groceries.limit(4).each do |food| %>
          <div class="nf-snap"><%= render "foods/card", food: food %></div>
        <% end %>
      <% else %>
        <% 4.times do %>
          <div class="nf-snap"><%= render "foods/card", food: nil %></div>
        <% end %>
      <% end %>
    </div>
  </section>


  <!-- Map -->
  <div style="width: 100%; height: 600px;"
  data-controller="map"
  data-map-markers-value="<%= @markers.to_json %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>



  <!-- Bottom tab bar (mobile) -->
  <nav class="nf-tabbar" aria-label="Bottom navigation">
    <%= link_to foods_path, class: "nf-tab" do %>
      <span class="nf-tab-ico">üç≤</span>
      <span>Discover</span>
    <% end %>
    <%= link_to foods_path, class: "nf-tab" do %>
      <span class="nf-tab-ico">üîé</span>
      <span>Search</span>
    <% end %>
    <% if user_signed_in? %>
      <%= link_to root_path, class: "nf-tab" do %>
        <span class="nf-tab-ico">üë§</span>
        <span>Profile</span>
      <% end %>
    <% else %>
      <%= link_to new_user_session_path, class: "nf-tab" do %>
        <span class="nf-tab-ico">üë§</span>
        <span>Sign in</span>
      <% end %>
    <% end %>
  </nav>
</div>
