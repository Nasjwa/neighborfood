  <!-- Tag chips -->
  <div class="nf-chip-rownf-chip-row--scroll" tabindex="0" aria-label="Filter tags">
    <% selected = Array(params[:tags]) %>

    <% @tags.each do |tag| %>
      <% active = selected.include?(tag.name) %>

      <%= link_to tag.name,
        foods_path(tags: active ? selected - [tag.name] : selected + [tag.name]),
        class: "nf-chip #{active ? 'nf-chip--cta' : ''}" %>
    <% end %>

    <% if selected.any? %>
      <%= link_to "Clear filters", foods_path, class: "nf-chip nf-chip--cta" %>
    <% end %>
  </div>

  <!-- Section: Near you -->
  <section class="nf-section nf-row" data-controller="carousel">
    <div class="nf-row__head">
      <h2 class="nf-row__title">Near you</h2>
      <div class="nf-arrows">
        <button type="button" class="nf-arrow" data-action="carousel#prev" aria-label="Scroll left">‹</button>
        <button type="button" class="nf-arrow" data-action="carousel#next" aria-label="Scroll right">›</button>
      </div>
    </div>

    <div class="nf-scroller" data-carousel-target="track" role="region" aria-label="Near you">
      <% if defined?(@nearby) && @nearby.present? %>
        <% @nearby.each do |food| %>
          <div class="nf-snap"><%= render "foods/card", food: food %></div>
        <% end %>
      <% else %>
        <% 6.times do %>
          <div class="nf-snap"><%= render "foods/card", food: nil %></div>
        <% end %>
      <% end %>
    </div>
  </section>

  <!-- Section: Cooked meals -->
  <section class="nf-section nf-row" data-controller="carousel">
    <div class="nf-row__head">
      <h2 class="nf-row__title">Cooked meals</h2>
      <div class="nf-arrows">
        <button type="button" class="nf-arrow" data-action="carousel#prev" aria-label="Scroll left">‹</button>
        <button type="button" class="nf-arrow" data-action="carousel#next" aria-label="Scroll right">›</button>
      </div>
    </div>

    <div class="nf-scroller" data-carousel-target="track" role="region" aria-label="Cooked meals">
      <% if defined?(@cooked) && @cooked.present? %>
        <% @cooked.each do |food| %>
          <div class="nf-snap"><%= render "foods/card", food: food %></div>
        <% end %>
      <% else %>
        <% 4.times do %>
          <div class="nf-snap"><%= render "foods/card", food: nil %></div>
        <% end %>
      <% end %>
    </div>
  </section>

  <!-- Section: Groceries -->
  <section class="nf-section nf-row" data-controller="carousel">
    <div class="nf-row__head">
      <h2 class="nf-row__title">Groceries</h2>
      <div class="nf-arrows">
        <button type="button" class="nf-arrow" data-action="carousel#prev" aria-label="Scroll left">‹</button>
        <button type="button" class="nf-arrow" data-action="carousel#next" aria-label="Scroll right">›</button>
      </div>
    </div>

    <div class="nf-scroller" data-carousel-target="track" role="region" aria-label="Groceries">
      <% if defined?(@groceries) && @groceries.present? %>
        <% @groceries.each do |food| %>
          <div class="nf-snap"><%= render "foods/card", food: food %></div>
        <% end %>
      <% else %>
        <% 4.times do %>
          <div class="nf-snap"><%= render "foods/card", food: nil %></div>
        <% end %>
      <% end %>
    </div>
  </section>


  <!-- MAP MODAL -->
<div id="map-modal" class="map-modal hidden">
  <div class="map-modal-content">
    <button id="close-map-modal" class="close-map-btn">✕</button>

    <div id="map-wrapper" class="map-area">

      <div id="modal-map"
           style="width: 100%; height: 100%;"
           data-controller="map"
           data-map-markers-value="<%= @markers.to_json %>"
           data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    </div>

  </div>
</div>

<!-- CLAIM MODAL -->
<div id="claim-modal" class="claim-modal hidden">
  <div class="claim-modal-content">

    <div id="claim-wrapper" class="claim-area">
      <div id="claim-modal-body"></div>
    </div>
  </div>
</div>


